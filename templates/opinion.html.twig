{% extends "base.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
{% endblock %}

{% block body %}
      <section class="contacto">
            <form class="contacto-formulario" id="form">
                <div class="campo-formulario">
                    <p class="titulo-medio">Opiniones de los Guardianes</p>
                </div>
                <div class="campo-formulario">
                    <p>Autor</p>
                    <input type="text" name="nombre" id="autor" placeholder="example">
                </div>
                <div class="campo-formulario">
                    <p>Ciudad</p>
                    <select name="ciudad" id="ciudad">
                        <option value="madrid">Madrid</option>
                        <option value="barcelona">Barcelona</option>
                        <option value="sevilla">Sevilla</option>
                    </select>
                </div>
                <div class="campo-formulario">
                    <p>Comentario</p>
                    <textarea name="comentario" id="campo-texto" cols="30" rows="10" placeholder="escribir aquí"></textarea>
                </div>
                <div class="campo-formulario">
                    <p><input type="checkbox" name="politica" id="terminos">Acepta la <a href="#">política de privacidad</a></p>
                </div>
                <div class="campo-formulario">
                    <button>Enviar</button>
                </div>
            </form>
        </section>          
{% endblock %}

{% block javascript %}
      <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
      <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
{% endblock %}
